def max_sum_subarray(arr, k):
    n = len(arr)
    curr_sum = sum(arr[:k])
    max_sum = curr_sum
    
    for i in range(k, n):
        curr_sum += arr[i] - arr[i-k]  # Slide window
        max_sum = max(max_sum, curr_sum)
    
    return max_sum

print(max_sum_subarray([2, 1, 5, 1, 3, 2], 3))  # Output: 9
