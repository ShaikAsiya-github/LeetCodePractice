def two_sum(arr,target):
  l=0,r=len(arr)-1
  while l<r:
    s=arr[l]+arr[r]
    if s==target:
      return [i,j]
    elif s<target:
      l+=1
    else:
      r-=1
print("Works for only sorted array elements")
arr=list(map(int,input("Enter array elements:").split()))
target=int(input("Enter target sum:"))
res=two_sum(arr,target)
